[Unit]
Description=API User
After=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/api-pi
Environment="PATH=/home/pi/relay-venv/bin"
ExecStart=/home/pi/relay-venv/bin/uvicorn api_user:app --host 0.0.0.0 --port 5000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
